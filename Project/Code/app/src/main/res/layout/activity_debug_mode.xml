<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DebugMode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCookMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnOpenCook"
            android:text="@string/btnCookMenu" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnOpenComplaint"
            android:text="@string/btnDebugComplaint" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnComplain"
            android:text="Complain" />

        <Button
            android:id="@+id/banFormBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnSuspensionActivity"
            android:text="Suspension Activity" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
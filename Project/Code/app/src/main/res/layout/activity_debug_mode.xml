<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DebugMode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnOpenCook"
            android:text="@string/btnCookMenu" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnRandomComplaint"
            android:text="Create Randomized Complaint" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="unArchiveAll"
            android:text="UnArchive all Complaints" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="unBanAll"
            android:text="UnBan all users" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="The buttons below are set for deletion, please avoid using them as much as possible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnSuspensionActivity"
            android:text="Suspension Activity" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnOpenComplaint"
            android:text="@string/btnDebugComplaint" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>